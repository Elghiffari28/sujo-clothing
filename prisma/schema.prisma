generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Promo {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // hashed
  role      String   @default("user") // bisa "admin"
  createdAt DateTime @default(now())
}

model Testimoni {
  id              Int       @id @default(autoincrement())
  keterangan      String
  imageUrl        String
  createdAt       DateTime  @default(now())
}

model Artikel {
  id        Int      @id @default(autoincrement())
  title     String
  imageUrl  String?
  content   String  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


